# ICE warm start
export CICERUNTYPE=initial
export RUNTYPE=startup
export USE_RESTART_TIME=.true.

# MOM6 warm start
export MOM6_RESTART_SETTING=r

# Waves
export OUT_BEG=$RUN_BEG
export RST_BEG=$RUN_BEG
export RST_2_BEG=$RUN_BEG

export CPLCHM=.false.
export DNATS=0
