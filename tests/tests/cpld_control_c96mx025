#
#  cpld_control C96mx025 P8 test
#
export TEST_DESCR="Fully coupled FV3-CCPP-MOM6-CICE-CMEPS system - C96MX025"

export CNTL_DIR="cpld_control_c96mx025"

export LIST_FILES=" "

export_fv3
export_cpl

export RESTART_N=12
export RESTART_INTERVAL="${RESTART_N} -1"

# C96mx025 atm/ocn/ice resolution
export ATMRES=C96
export OCNRES=025
export ICERES=0.25
export NX_GLB=1440
export NY_GLB=1080
export NPX=97
export NPY=97
export IMO=384
export JMO=190
export NPZ=127
export NPZP=128
export ATMTILESIZE=`expr $NPX - 1`

# set mannually for cheyenne, using C96 ATM and MX025 OCN
export TPN=$TPN_cpl_c96
export INPES=$INPES_cpl_c96
export JNPES=$JNPES_cpl_c96
export THRD=$THRD_cpl_c96
export WRTTASK_PER_GROUP=$WPG_cpl_c96

export NPROC_ICE=48
export np2=`expr $NPROC_ICE / 2`
export BLCKX=`expr $NX_GLB / $np2`
export BLCKY=`expr $NY_GLB / 2`

export APB_cpl_c96="0 149"
export MPB_cpl_c96="0 143"
export OPB_cpl_c384="150 269"
export IPB_cpl_c384="270 317"

export TASKS=318
export med_petlist_bounds=$MPB_cpl_c96
export atm_petlist_bounds=$APB_cpl_c96
export ocn_petlist_bounds=$OPB_cpl_c384
export ice_petlist_bounds=$IPB_cpl_c384

# explicit timesteps all components, all tests
export DT_ATMOS=300
export DT_CICE=${DT_ATMOS}
export DT_DYNAM_MOM6=300
export DT_THERM_MOM6=300

# nems.configure
export coupling_interval_slow_sec=${DT_THERM_MOM6}
export coupling_interval_fast_sec=${DT_ATMOS}

# resolution dependent files
export MOM_INPUT=MOM_input_template_${OCNRES}
export MESHOCN_ICE=mesh.mx${OCNRES}.nc
export CICEGRID=grid_cice_NEMS_mx${OCNRES}.nc
export CICEMASK=kmtu_cice_NEMS_mx${OCNRES}.nc
export CHLCLIM=''
export FRUNOFF=''
export MOM6_RIVER_RUNOFF=False

export CPLWAV=.false.
export CPLWAV2ATM=.false.
export MOM6_USE_WAVES=False

export NEMS_CONFIGURE=nems.configure.cpld.IN

export FV3_RUN=cpld_control_run.IN
